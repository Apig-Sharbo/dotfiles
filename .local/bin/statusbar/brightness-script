#!/bin/sh

bri=$(cat /sys/class/backlight/intel_backlight/brightness)
max_bri=$(cat /sys/class/backlight/intel_backlight/max_brightness)

brightness=$(( 100 * bri / max_bri))

printf "%s %s%%" "â˜€" "$brightness"
