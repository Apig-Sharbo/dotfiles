mpv-yt(){
    case $1 in
      hd)  w=1280 ;;
      fhd) w=1920 ;;
      2k)  w=2560 ;;
      4k)  w=3840 ;;
      8k)  w=7680 ;;
    esac
    prime-run mpv --ytdl-format="bestvideo[width=?$w][fps<=?60]+bestaudio" "$2";
}
